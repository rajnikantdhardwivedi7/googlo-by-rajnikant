const express = require('express');
const app = express();

app.use(express.static('public')); // if you have frontend files in /public

app.get('/', (req, res) => {
  res.send('Hello from Googlo!');
});

const port = process.env.PORT || 3000;
app.listen(port, () => {
  console.log(`Server running on port ${port}`);
});
